<UserControl x:Class="SpamTools.View.RecipientEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SpamTools.View"
             mc:Ignorable="d" 
             DataContext="{Binding MainWindowModel, Source={StaticResource Locator}}"
             d:DesignHeight="470" d:DesignWidth="230">
    <StackPanel DataContext="{Binding CurrentRecipient}">
        <GroupBox Header="Id">
            <TextBox IsReadOnly="True" Text="{Binding Id}"/>
        </GroupBox>
        <GroupBox Header="Имя">
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"/>
        </GroupBox>
        <GroupBox Header="Адрес">
            <TextBox Text="{Binding EmailAddress}"/>
        </GroupBox>
        <Button Content="Внести изменения"/>
        <Button Content="Создать"/>
    </StackPanel>
</UserControl>
